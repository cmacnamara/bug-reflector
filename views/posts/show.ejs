<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section class="main-content">
  <div class="content-card">
    <div class="post-headline">
      <h3>Posted by <a href="/profiles/<%= post.owner._id %>"><%= post.owner.name %></a> on <%= post.createdAt.toLocaleDateString() %></h3>
      <% if (post.owner.equals(user?.profile._id)) { %>
      <div class="post-actions">
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
          <button>Delete</button>
        </form>
        <a href="/posts/<%= post._id %>/edit"><button>Edit</button></a>
      </div>
      <% } %>
    </div>
    <h3 class="<%= post.resolved ? 'post-resolved' : 'post-unresolved' %>"><%= post.resolved ? 'Bug resolved!' : 'Bug In Progress' %></h3>
    <h2><%= post.summary %></h2>
    <p><%= post.mainContent %></p>
    <p><%= post.reflection %></p>
    <% if (post.technologies) { %>
      <p>
      <% post.technologies.forEach(technology => { %>
        <%= technology %>
      <% }) %>
      </p>
    <% } %>
    <% if (user) { %>
    <h3>Comment as <%= user?.profile.name %></h3>
    <form action="/posts/<%= post._id %>/comments" method="POST">
      <textarea name="content" class="text-area" cols="30" rows="5" placeholder="Leave a comment"></textarea><br>
      <button type="submit">Add Comment</button>
    </form>
    <% } else { %>
      <h3>Log In to leave a comment!</h3>
      <% } %>
    <% if (post.comments.length) { %>
     <hr>
     <% post.comments.forEach(comment => { %>
      <div class="comment-headline">
        <h4><%= comment.owner.name %> on <%= comment.createdAt.toLocaleDateString() %> <span style="font-style: italic;"><%= comment.edited ? '(edited)' : '' %></span></h4>
        <div class="post-actions">
          <% if (post.owner.equals(user?.profile._id) || comment.owner.equals(user?.profile._id)) { %>
          <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
            <button>Delete</button>
          </form>
          <% } %>
          <% if (comment.owner.equals(user?.profile._id)) { %>
            <a href="/posts/<%= post._id %>/comments/<%= comment._id %>/edit"><button>Edit</button></a>
          <% } %>
        </div>
      </div>
      <p><%= comment.content %></p>
     <% }) %>
    <% } %>
  </div>
</section>

<%- include('../partials/footer') %>